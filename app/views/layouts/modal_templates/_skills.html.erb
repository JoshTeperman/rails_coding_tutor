<div class="modal fade" id="modalskillsform" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Change your skills list <small class="form-text text-muted mb-4">Show your skills</small></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mx-3">
              <div class="md-form mb-5">
                  <label data-error="wrong" data-success="right" for="skills">Skills<small class="form-text text-muted mb-4">Add more skills?</small></label>
                  <input type="textarea" id="skills" class="form-control validate" name="skills" value="<%= @profile.skills %>">
              </div>
              </div> 

              <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default" type="submit" value="Update">Update</button>
              </div>
          </div>
        </div>
    </div>