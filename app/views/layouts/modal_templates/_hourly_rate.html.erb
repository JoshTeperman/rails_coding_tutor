<div class="modal fade" id="modalhourly_rateform" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
            aria-hidden="true">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header text-center">
                  <h4 class="modal-title w-100 font-weight-bold">Change your Hourly Rate <small class="form-text text-muted mb-4">Set a price</small></h4>
                  <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                  </button>
              </div>

              <div class="modal-body mx-3">
                <div class="md-form mb-5">
                    <label data-error="wrong" data-success="right" for="hourly_rate">Hourly Rate<small class="form-text text-muted mb-4">Set your price high and the chances of getting a student will be low</small></label>
                    <input type="text" class="form-control validate" name="hourly_rate" value="<%= @profile.hourly_rate %>" />
                </div>
              </div> 

                <div class="modal-footer d-flex justify-content-center">
                  <button class="btn btn-default" type="submit" value="Update">Update</button>
                </div>
            </div>
          </div>
    </div>