<div class="modal fade" id="modalbioform" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
          aria-hidden="true">
        <div class="modal-dialog" role="document">
          <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title w-100 font-weight-bold">Change your Bio <small class="form-text text-muted mb-4">Tell others about yourself.</small></h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>

            <div class="modal-body mx-3">
              <div class="md-form mb-5">
                  <label data-error="wrong" data-success="right" for="bio">Bio<small class="form-text text-muted mb-4">Update your bio so people know what you're up to</small></label>
                  <input type="textarea" id="bio" class="form-control validate" class="form-control" name="bio" value="<%= @profile.bio %>" />
              </div>
              </div> 

              <div class="modal-footer d-flex justify-content-center">
                <button class="btn btn-default" type="submit" value="Update">Update</button>
              </div>
          </div>
        </div>
    </div>