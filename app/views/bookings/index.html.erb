<div class="whole">
  <% if @tutor_bookings.count.zero? && @student_bookings.count.zero?%>
    <h3 >You don't have any bookings yet. Make a booking with a tutor to display your bookings.</h3>
    <%= link_to 'Back', :back, class: "btn btn-default btn-rounded mb-4 bg-info text-white" %>
  <% else %>
  
    <% if @tutor_bookings.count > 0 %>
      <div class="title"><h3>My Bookings (as tutor)</h3></div>
      <div class="box">
      <% @tutor_bookings.each do |booking| %>
      <div class= "tutor_bookings">
        <div class="card m-2" style="width: 21.5rem;">
          <div class="card-body">
            <p><strong>Date: </strong><%= booking.date  %></p>
            <p><strong>Location: </strong><%= booking.location %></p>
            <p><strong>Price: </strong>$<%= booking.price %></p>
            <p><strong>Duration: </strong><%= booking.duration %> mins</p>
          </div>
         </div>
        </div>
      <% end %>
    <% end %>
     </div>
    </div>

    
    <% if @student_bookings %>
      <div class="title"><h3>My Bookings (as student)</h3></div>
      <div class="box">
      <% @student_bookings.each do |booking| %>
      <div class="student_bookings">
        <div class="card m-2" style="width: 21.5rem;">
          <div class="card-body">
            <p><strong>Tutor: </strong><%= Profile.where(tutor_id: booking.tutor_id).last.first_name %></p>
            <p><strong>Date: </strong><%= booking.date  %></p>
            <p><strong>Location: </strong><%= booking.location %></p>
            <p><strong>Price: </strong>$<%= booking.price %></p>
            <p><strong>Duration: </strong><%= booking.duration %> mins</p>
          </div>
         </div>
      </div>
      <% end %>
    <% end %>

  <% end %>
 
</div>
