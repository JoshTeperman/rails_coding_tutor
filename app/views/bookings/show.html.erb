

<div class="show-booking-container">
  <div class="show-booking-card">
   

    <h2>Tutor name: <%= @tutor_name %> <%= @tutor_profile.surname %></h2>

      <ul>
        <p><strong>Date: </strong><%= @booking.date  %></p>
        <p><strong>Location: </strong><%= @booking.location %></p>
        <p><strong>Price: </strong>$<%= @booking.price %></p>
        <p><strong>Duration: </strong><%= @booking.duration %> mins</p>
    
      </ul>

    <p><%= link_to "EDIT", edit_booking_path(@booking) %> |
    <%= link_to "Delete", delete_booking_path(@booking.id), method: :delete, data: { confirm: 'Are you sure?' } %> |
    <%= link_to "Back", bookings_path %></p>
    
  </div>
</div>
