<div class="edit-container">
  
  <form class="form-style" action="<%= update_booking_path(@booking) %>" method="POST" enctype="multipart/form-data">
  <input type="hidden" value="<%= form_authenticity_token %>" name="authenticity_token" />
  <input type="hidden" name="price" class="form-control" value="" id="price"/>
  <input type="hidden" name="hourly_rate" class="form-control" value="<%= @tutor_hourly_rate %>" id='hourly_rate' />
  <input type="hidden" name="_method" value="patch"/>

    <div class="edit-card-container">
    <div class="edit-card">
      <h5 class="card-header info-color white-text text-center py-4">
          <strong>Edit a session</strong>
      </h5>

  
       <div class="card-body px-lg-5 pt-0">
        <form class="text-center" style="color: #757575;">

         <!-- Date -->
            <div class="md-form mt-3">
                <label for="date">Date</label>
                <input type="date" name="date" value="<%= @booking.date %>" class="form-control" />
            </div>
            <br>
        <!-- Location -->
            <div class="md-form">
                <label for="location">Location</label><br>
                <select name="location" id="location">
                    <option value="">Please select</option>
                    <option value="Melbourne" selected="selected">Melbourne</option>
                    <option value="Sydney">Sydney</option>
                    <option value="Tasmania">Tasmania</option>
                </select>
            </div>
            <br>

        <!-- Duration -->    
             <div class="md-form">
                <label for="duration">Duration (minutes)</label><br>
                <select name="duration" id="duration">
                    <option value="">Please select</option>
                    <option value="15" selected="selected">15</option>
                    <option value="30">30</option>
                    <option value="60">60</option>
                    <option value="90">90</option>
                    <option value="90">120</option>
                </select>
            </div>
            <br>
              
        <!-- Tutor -->    
            <div class="md-form">
                <label for="tutor_id">Tutor</label>
                <input type="text" name="tutor_id" class="form-control" value="<%= @tutor_id %>">
            </div>

        <!-- Send button -->
            <button class="btn btn-outline-info btn-rounded btn-block z-depth-0 my-4 waves-effect" type="submit" value="Update">Update</button>

          <%= link_to "Delete", delete_booking_path(@booking.id), method: :delete, data: { confirm: 'Are you sure?' } %>
          <p><%= link_to "Back", booking_path %></p>
  </form>

    </div>



    <script>
        const duration = document.querySelector('#duration');
        const hourly_rate = document.querySelector('#hourly_rate'); 
        const price = document.querySelector('#price');
        duration.addEventListener('change', (e) => {
            const durationValue = parseInt(e.target.value);
            const finalPrice = parseInt(hourly_rate.value) * durationValue * (durationValue / 60)
            price.value = finalPrice
        })
    </script>
</div>

 





 



